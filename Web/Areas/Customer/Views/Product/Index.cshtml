@model IEnumerable<Domain.Entities.Product>
<main class="site-collections">
	<div class="untree_co-section product-section before-footer-section">
		<div class="container">
			<div class="row">
				<!-- Start Filter Column -->
				<div class="col-12 col-md-4 col-lg-3 mb-5">
					<div class="filter-section">

						<!-- Example filter categories -->
						<div class="filter-item">
							@await Component.InvokeAsync("CategoryMenu")
						</div>
					</div>
				</div>
				<!-- End Filter Column -->

				<!-- Start Products Column -->
				<div class="col-12 col-md-8 col-lg-9">
					<div class="row">

						<!-- Repeat other product columns -->
						@{
							foreach (var item in Model)
							{
								<div class="col-12 col-md-4 col-lg-3 mb-5">

									<a class="product-item" href="#">
										<img src="~/assets/images/products/@item.ImageUrl" class="img-fluid product-thumbnail" style="width:200px;height:150px;object-fit:cover">
										<div>
											<button style="width:20px;height:20px;background-color: red; border:revert; border-radius:50%;	"></button>
											<button style="width:20px;height:20px;background-color: white; border:solid 1px gray; border-radius:50%;	"></button>
											<button style="width:20px;height:20px;background-color: green; border:solid 1px gray; border-radius:50%;	"></button>
											<button style="width:20px;height:20px;background-color: yellow; border:solid 1px gray; border-radius:50%;	"></button>
										</div>
										<h3 class="product-title">@item.ProductName</h3>
										<strong class="product-price">@item.Price</strong>
										<span class="icon-cross">
											<img src="~/themes/Customer/images/cross.svg" class="img-fluid">
										</span>
									</a>
								</div>
							}
						}

					</div>
				</div>
				<!-- End Products Column -->

			</div>
		</div>
	</div>
</main>

