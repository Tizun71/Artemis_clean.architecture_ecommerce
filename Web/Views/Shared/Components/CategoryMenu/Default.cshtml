@model IEnumerable<Web.Areas.Customer.Models.ViewModel.CategoryMenuViewModel>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Loại sản phẩm</h4>
        <ul class="list-unstyled fruite-categorie">
            @foreach (var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="Product" asp-action="Index" asp-route-CategoryID="@item.CategoryID"><i class="me-2"></i>@item.CategoryName</a>
                        <span>( @item.Quantity )</span>
                    </div>
                </li>
            }     
        </ul>
        <h4>Kích cỡ</h4>
    </div>
</div>